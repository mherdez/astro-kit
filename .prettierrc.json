{
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "all",
  "plugins": ["prettier-plugin-svelte"],
  "pluginSearchDirs": ["."],
  "overrides": [
    {
      "files": "*.{js*,ts*}",
      "options": {
        "jsxSingleQuote": true,
        "singleQuote": true,
        "semi": false,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.astro",
      "options": {
        "jsxSingleQuote": false,
        "singleQuote": true,
        "semi": false
      }
    },
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "singleQuote": true,
        "semi": false
      }
    }
  ]
}
